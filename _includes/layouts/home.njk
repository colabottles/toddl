---
layout: layouts/base.njk
templateClass: tmpl-home
---

  <article class="about-intro">
    <div class="home-container">
      <h1 class="primary-heading">Hi, I'm Todd.</h1>
      <h2 class="sub-heading">This is my site.</h2>
    </div>
  </article>

  <div class="articles">
    <h3 class="list-label">Last Article</h3>
      <ul class="article-sections">
        <li class="article-wrapper">
          {%- for post in collections.post | reverse | limit(5) -%}
              <a href="{{ post.url }}">
                <h4 class="article-link">{{ post.data.title }}</h4>
              </a>
          {%- endfor -%}
        </li>
      </ul>
    </div>
